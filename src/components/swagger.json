  "components": {
    "securitySchemes": {
      "googleAuth": {
        "description": "ignore the clientId, just click authentication",

        "type": "oauth2",
        "flows": {
          "implicit": {
            "authorizationUrl": "http://localhost:8000/api/auth/google",
            "scopes": {}
          }
        }
      }
    }
  },
  "paths": {
    "/auth/me": {
      "get": {
        "tags": ["Auth"],
        "summary": "Get the profile of the currently authenticated user.",
        "description": "This endpoint returns the profile of the currently authenticated user. No authentication is required for this endpoint.",
        "responses": {
          "200": {
            "description": "Successfully retrieved user profile.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string",
                      "description": "The user's email address"
                    },
                    "name": {
                      "type": "string",
                      "description": "The user's full name"
                    },
                    "picture": {
                      "type": "string",
                      "description": "The googleAuth profile picture"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/shorten": {
      "post": {
        "tags": ["Shorten"],
        "summary": "Shorten a long URL",
        "description": "This endpoint accepts a long URL and optional custom alias and topic, and returns a shortened URL.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "longUrl": {
                    "type": "string",
                    "example": "https://google.com"
                  },
                  "customAlias": {
                    "type": "string",
                    "example": "xyz1"
                  },
                  "topic": {
                    "type": "string",
                    "example": "meme"
                  }
                },
                "required": ["longUrl"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully shortened the URL",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "shortUrl": {
                      "type": "string",
                      "example": "https://htydfxqbyqs3gc45jpx6lp5yfu.srv.us/api/shorten/hPqc"
                    },
                    "createdAt": {
                      "type": "string",
                      "example": "2024-12-19T06:41:13.459Z"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/shorten/{alias}": {
      "get": {
        "tags": ["Shorten"],
        "summary": "Redirect to the original URL",
        "description": "This endpoint takes an alias and redirects the user to the corresponding original URL.",
        "parameters": [
          {
            "name": "alias",
            "in": "path",
            "required": true,
            "description": "The alias of the shortened URL",
            "schema": {
              "type": "string",
              "example": "xyz1"
            }
          }
        ],
        "responses": {
          "302": {
            "description": "Redirect to the original URL",
            "schema": {
              "type": "object",
              "properties": {
                "now": {
                  "type": "object",
                  "properties": {
                    "rfc2822": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },

          "404": {
            "description": "Alias not found"
          }
        }
      }
    },
